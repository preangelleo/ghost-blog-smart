# Ghost Blog Smart API Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Flask API Configuration
# =============================================================================

# Flask environment (development/production)
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# API Security (optional - uncomment to enable API key authentication)
# FLASK_API_KEY=your_secure_api_key_here_generate_a_strong_random_key

# =============================================================================
# Ghost CMS Configuration
# =============================================================================

# Ghost Admin API Key (format: key_id:secret_key)
GHOST_ADMIN_API_KEY=your_ghost_admin_api_key_here

# Ghost Site URL (must include https://)
GHOST_API_URL=https://your-ghost-site.com

# =============================================================================
# AI Services Configuration
# =============================================================================

# Google Gemini API Key (for AI content enhancement and Imagen image generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Replicate API Token (for Flux image generation - format: r8_xxxxxxxxxxxxxx)
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# =============================================================================
# Optional Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum request timeout (seconds)
REQUEST_TIMEOUT=120

# Image generation preferences
# DEFAULT_IMAGE_PROVIDER=flux  # or 'imagen'
# DEFAULT_ASPECT_RATIO=16:9

# =============================================================================
# Docker Specific Configuration
# =============================================================================

# Docker build arguments
DOCKER_TAG=latest
DOCKER_REGISTRY=betashow  # Your Docker Hub username

# =============================================================================
# Development Configuration
# =============================================================================

# Test mode (set to true to prevent actual posting during development)
IS_TEST_MODE=true

# Development Ghost instance (if different from production)
# DEV_GHOST_ADMIN_API_KEY=your_dev_ghost_admin_api_key_here
# DEV_GHOST_API_URL=https://your-dev-ghost-site.com

# =============================================================================
# Security Notes
# =============================================================================

# 1. NEVER commit this file with real credentials to version control
# 2. Generate strong API keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Rotate API keys regularly
# 5. Use Docker secrets or cloud-based secret management in production